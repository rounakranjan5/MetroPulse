<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary"><%= @station.name %>'s Vehicles</h2>
    <% if @station.user_id == Current.user.id %>
    <%= link_to "Add Vehicle", new_rental_station_vehicle_path(@station), class: "btn btn-success" %>
    <% end %>
  </div>

  <% if @vehicles.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @vehicles.each do |vehicle| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <% if vehicle.image_url.present? %>
              <img src="<%= vehicle.image_url %>" class="card-img-top" alt="<%= vehicle.name %> image" style="height: 200px; object-fit: cover;">
            <% else %>
              <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No image available" style="height: 200px; object-fit: cover;">
            <% end %>
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title text-dark fw-bold"><%= vehicle.name %></h5>
                <p class="card-text text-muted"><strong>Condition:</strong> <%= vehicle.condition %></p>
                <p class="card-text text-muted"><strong>Price:</strong> <%= vehicle.price_per_hour %>â‚¹/hour</p>
              </div>
              <% if @station.user_id == Current.user.id %>
                <div class="mt-3 d-flex justify-content-between">
                  <%= link_to "Edit", edit_rental_station_vehicle_path(@station,vehicle), class: "btn btn-primary btn-sm" %>
                  <%= button_to "Delete", delete_rental_station_vehicle_path(@station,vehicle), method: :delete, data: { confirm: "Are you sure you want to delete this station?" }, class: "btn btn-outline-danger btn-sm" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You haven't added any rental stations yet.</p>
  <% end %>
</div>
